<% extend("../_base/layout") %>

<main>
	<h1>Welcome <%= user.name %></h1>
	<input data-token="<%= token %>" type="hidden" value="<%= token %>">
	<input data-login="<%= user.login %>" type="hidden" value="<%= user.login %>">
	<input data-user="<%= user.name %>" type="hidden" value="<%= user.name %>">
	<label>
		Week:
		<select id="render-option" name="render-option">
			<option selected value="currentWeek">This week</option>
			<option value="lastWeek">Last week</option>
			<option value="twoWeeksAgo">Two weeks ago</option>
		</select>
	</label>

	<h2>Top commiters</h2>
	<table id="ranking" cellspacing="0">
		<thead>
			<th>#</th>
			<th>User</th>
			<th>Commits</th>
		</thead>
		<tbody></tbody>
	</table>
	<form>
		<label>Add user to ranking
			<input type="text" id="new-user">
		</label>
		<input type="submit" value="Add">
	</form>
</main>
<script src="https://cdn.socket.io/socket.io-1.3.5.js"></script>
<script src="<%= assetFingerprint('/js/app.js') %>" type="text/javascript"></script>